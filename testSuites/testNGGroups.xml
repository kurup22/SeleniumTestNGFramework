<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="suite" parallel="tests" verbose="1">
    <groups>
        <run>
            <include name="smoke" />
            <include name="regression" />
        </run>
    </groups>
    <test name="Submit Order Test">
        <parameter name="productName" value="ADIDAS ORIGINAL" />
        <classes>
            <class name="Tests.SubmitOrder" />
        </classes>
    </test>

    <test name="Error Validations" >
        <classes>
            <class name="Tests.WrongLogin"/>
        </classes>
    </test>
</suite>

